{% for host in groups['all'] %}
  {% if hostvars[host].ansible_host is defined %}
    {{ hostvars[host].ansible_host }} {{ host }} {{ host }}.{{ domain_project }} 
    {% if hostvars[host].add_name is defined %}
    {{ hostvars[host].ansible_host}} {{ hostvars[host].add_name | join(' ') }}
    {% endif %}
  {% endif %}
{% endfor %}